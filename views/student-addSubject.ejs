<%- include layout/header %>
  <br>
  <h3>Add Subject Students Data</h3>
  <form class="form-default" action="/student/addSubject?id=<%=student.id%>" method="post">
    <div class="form-group">
      <label> First name</label><br>
      <input type="text" name="first_name" value="<%=student.first_name%>" disabled><br>
    </div>
    <div class="form-group">
      <label> Last name</label><br>
      <input type="text" name="last_name" value="<%= student.last_name%>" disabled><br>
    </div>
    <div class="form-group">
      <label> Email</label><br>
      <input type="text" name="email" value="<%= student.email%>" disabled><br>
    </div>
    <div class="form-group">
      <label> Pilih mata pelajaran</label><br>
      <select name="idSubjects">
          <% subjects.forEach((z)=>{ %>
          <option value="<%=z.id%>"><%=z.subject_name%></option>
          <%})%>
        </select><br>
    </div>
    <button type="submit" class="btn btn-primary">Simpan student</button>
  </form>
  <br>
  <a href="/student"><button type="button" class="btn btn-danger">Back to Student</button></a>
  <%- include layout/footer %>
