<%- include layout/header %>
<br>
<%- include layout/menu %>
<br>
<h2>Table Students   Data</h2>
<table class="table">
  <thead class="thead-default">
    <tr>
      <th>#</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Action</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% dStudents.forEach(row=>{%>
    <tr>
      <td><%= row.id %></td>
      <td><%= row.first_name %></td>
      <td><%= row.last_name %></td>
      <td><%= row.email %></td>
      <td><a href="student/addSubject?id=<%= row.id %>">Assign Subject</a></td>
      <td><a href="student/edit?id=<%= row.id %>">Edit</a> | <a href="student/delete?id=<%= row.id %>" onclick="return confirm('Kamu yakin ingin hapus <%= row.first_name %> ?');">Delete</a></td>
    </tr>
    <%})%>
  </tbody>
</table>
<br>
<h3>Input data student</h3>
<h4 style="color:red"><%= error %></h4>
<br>
<form action="/student" method="post">
  <div class="form-group">
    <label> First name</label><br>
    <input type="text" name="first_name">
  </div>
  <div class="form-group">
    <label> Last name</label><br>
    <input type="text" name="last_name">
  </div>
  <div class="form-group">
    <label> Email</label><br>
    <input type="text" name="email">
  </div>
  <button type="submit" class="btn btn-primary" >Simpan student</button>
</form>
<br>
<a href="/"><button type="button" class="btn btn-danger">Back to Index</button></a>
<br>
<%- include layout/footer %>
