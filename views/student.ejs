<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Students</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
  </head>
  <body>
    <h2>Table Students   Data</h2>
    <table class="table">
      <thead class="thead-default">
        <tr>
          <th>#</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Action</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% dStudents.forEach(row=>{%>
        <tr>
          <td><%= row.id %></td>
          <td><%= row.first_name %></td>
          <td><%= row.last_name %></td>
          <td><%= row.email %></td>
          <td><a href="student/addSubject?id=<%= row.id %>">Assign Subject</a></td>
          <td><a href="student/edit?id=<%= row.id %>">Edit</a> | <a href="student/delete?id=<%= row.id %>" onclick="return confirm('Kamu yakin ingin hapus <%= row.first_name %> ?');">Delete</a></td>
        </tr>
        <%})%>
      </tbody>
    </table>
    <br>
    <h3>Input data student</h3>
    <h4 style="color:red"><%= error %></h4>
    <br>
    <form action="/student" method="post">
      <label> First name</label><br>
      <input type="text" name="first_name"><br>
      <label> Last name</label><br>
      <input type="text" name="last_name"><br>
      <label> Email</label><br>
      <input type="text" name="email"><br>
      <button type="submit">Simpan student</button>
    </form>
    <br>
    <a href="/"><button type="button">Back to Index</button></a>
  </body>
</html>
